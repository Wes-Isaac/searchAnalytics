<p><%= notice %></p>
<div class="container" >
<h2 class="title title--large center min-content" >Books</h2>
<div class="search" >
  <%= form_with url: book_search_path, method: :get, authenticity_token: false, data: {controller: "search", search_target: "form", turbo_frame: "books"
  } do |form| %>
  <%= form.text_field :query,
    placeholder: "Search books by title",
    autocomplete: "off",
    data: {action: "input->search#search"}
   %>
   <%end%>
</div>


<%= turbo_frame_tag "books" do %>
<h2 class="title" >Search Results</h2>
  <% books.each do |book| %>
    <div class="book">
      <h1><%= book.title %></h1>
      <p><%= book.description %></p>
    </div>
  <% end %>
<% end %>
</div>
